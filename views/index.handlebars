<div class="jumbotron bg-warning ">
    <div class="container">
        <h1>Eat Da Burger</h1>
    </div>
</div>
<div class="card" >
  <div class="card-body">
    <h5 class="card-title">Burgers not yet DEVOURED</h5>
    <div class="card-text"> 
                    <ul>
                        {{#each burgers}}
                        {{#unless devoured}}
                        {{> burger/burger-block devour=true}}
                        {{/unless}}
                        {{/each}}
                    </ul>
    </div>
  </div>
</div>
<div class="card" >
  <div class="card-body">
    <h5 class="card-title">Eaten burgers</h5>
    <div class="card-text"> 
                    <ul>
                        {{#each burgers}}
                        {{#if devoured}}
                        {{> burger/burger-block devour=false}}
                        {{/if}}
                        {{/each}}
                    </ul>
    </div>
  </div>
</div>
<div class="container">
    
    <div class="row container mb-5">
        <div class="col-8">
            <div class="card">
                <h2 class="card-title">Add a Burger</h2>
                <hr>
                <div class="card-body">
                    <form class="create-form">
                        <div class="form-group">
                            <label for="brgr">Burger Name:</label>
                            <input type="text" class="form-control" id="brgr" name="burger_name">
                        </div>
                        <div class="form-group">
                            <label for="dev">Hungry?</label><br>
                        </div>
                        <button class="create-form btn btn-danger" type="submit">Add Burger</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>